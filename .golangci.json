{
  "formatters": {
    "enable": [
      "gofmt",
      "goimports"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "third_party$",
        "builtin$",
        "examples$"
      ]
    },
    "settings": {
      "gofmt": {
        "simplify": true
      }
    }
  },
  "issues": {
    "max-issues-per-linter": 0,
    "max-same-issues": 0
  },
  "linters": {
    "enable": [
      "copyloopvar",
      "gosec",
      "misspell",
      "revive",
      "unconvert",
      "unparam"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "third_party$",
        "builtin$",
        "examples$"
      ],
      "rules": [
        {
          "linters": [
            "errcheck",
            "gosec",
            "unparam"
          ],
          "path": "_test\\.go"
        },
        {
          "linters": [
            "gosec"
          ],
          "text": "G404: Use of weak random number generator"
        }
      ]
    },
    "settings": {
      "errcheck": {
        "check-blank": true,
        "check-type-assertions": true
      },
      "gosec": {
        "confidence": "medium",
        "excludes": [
          "G104"
        ],
        "severity": "medium"
      },
      "govet": {
        "enable": [
          "shadow"
        ],
        "settings": {
          "shadow": {
            "strict": true
          }
        }
      },
      "misspell": {
        "locale": "US"
      },
      "revive": {
        "rules": [
          {
            "arguments": [
              "checkPrivateReceivers",
              "sayRepetitiveInsteadOfStutters"
            ],
            "disabled": false,
            "name": "exported"
          }
        ]
      }
    }
  },
  "output": {
    "formats": {
      "text": {
        "path": "stdout",
        "print-issued-lines": true,
        "print-linter-name": true
      }
    }
  },
  "run": {
    "modules-download-mode": "readonly",
    "tests": true
  },
  "version": "2"
}
